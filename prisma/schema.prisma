generator client {
  provider = "prisma-client-js"
  output   = "../src/app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(uuid())
  email           String   @unique
  name            String
  password        String
  emailVerified   Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  persons         Person[]
  admin           Boolean  @default(false)
  verificationCode String?
}

model Person {
  id                String               @id @default(uuid())
  name              String
  relationship      String
  userId            String
  user              User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  loveTypes         PersonLoveCategory[]
  rejectedGiftIdeas RejectedGiftIdea[]
  specialDays       SpecialDay[]
  traits            Trait[]
}

model Gift {
  id           String     @id @default(uuid())
  title        String
  website      String
  done         Boolean    @default(false)
  specialDayId String
  createdAt    DateTime   @default(now())
  specialDay   SpecialDay @relation(fields: [specialDayId], references: [id])
}

model LoveCategory {
  id          String               @id @default(uuid())
  name        String
  catalyst    String
  description String
  persons     PersonLoveCategory[]
}

model PersonLoveCategory {
  id             String       @id @default(uuid())
  personId       String
  loveCategoryId String
  note           String?
  loveCategory   LoveCategory @relation(fields: [loveCategoryId], references: [id])
  person         Person       @relation(fields: [personId], references: [id])
}

model SpecialDay {
  id       String   @id @default(uuid())
  personId String
  title    String
  date     DateTime
  gifts    Gift[]
  person   Person   @relation(fields: [personId], references: [id])
}

model RejectedGiftIdea {
  id        String   @id @default(uuid())
  personId  String
  content   String
  createdAt DateTime @default(now())
  person    Person   @relation(fields: [personId], references: [id])
}

model Trait {
  id          String    @id @default(uuid())
  personId    String
  type        TraitType
  description String
  person      Person    @relation(fields: [personId], references: [id])
}

enum TraitType {
  likes
  loves
  dislikes
  hates
  struggling_with
}
